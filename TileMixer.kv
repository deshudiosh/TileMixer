<Root>:
    anchor_x:"center"
    anchor_y:"center"

<TileGrid>:
#    height: sum(x.height for x in self.children)


<Tile>:
    size_hint: None, None

    Image:
        source:"txt_border.jpg"
        size: self.parent.size
        pos:self.parent.pos

    GridLayout:
        cols:2
        rows:2
        size:60,60
        pos:root.center_x - self.width/2, root.center_y - self.height/2

        Button:
            text:"L"
            on_press: root.left()
        Button:
            text:"R"
            on_press: root.right()
        Button:
            text:"V"
        Button:
            text:"H"

